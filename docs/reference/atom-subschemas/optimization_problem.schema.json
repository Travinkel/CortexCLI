{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Optimization Problem Atom",
  "description": "Optimize an objective subject to constraints.",
  "type": "object",
  "required": [
    "prompt",
    "objective",
    "variables",
    "constraints",
    "optimal_solution"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "objective": {
      "type": "string"
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "bounds": {
            "type": "string",
            "description": "Bounds or domain for the variable."
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "optimal_solution": {
      "type": "object",
      "description": "Optimal variable assignments."
    }
  },
  "additionalProperties": false
}
