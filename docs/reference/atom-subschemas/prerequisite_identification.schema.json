{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prerequisite Identification Atom",
  "description": "Identify prerequisites needed for a target skill.",
  "type": "object",
  "required": [
    "prompt",
    "target_skill",
    "prerequisites"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "target_skill": {
      "type": "string"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "skill",
          "rationale"
        ],
        "properties": {
          "skill": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": false
}
