{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Visual Hotspot Atom",
  "description": "Identify the correct hotspot region in an image.",
  "type": "object",
  "required": [
    "prompt",
    "image_ref",
    "hotspots"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "image_ref": {
      "type": "string"
    },
    "hotspots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "x",
          "y",
          "radius",
          "correct"
        ],
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "radius": {
            "type": "number",
            "minimum": 0
          },
          "correct": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "tolerance_px": {
      "type": "integer",
      "minimum": 0,
      "description": "Pixel tolerance."
    }
  },
  "additionalProperties": false
}
