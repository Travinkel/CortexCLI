{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3D Rotation Atom",
  "description": "Rotate a 3D object to match a target orientation.",
  "type": "object",
  "required": [
    "prompt",
    "model_ref",
    "target_orientation"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "model_ref": {
      "type": "string"
    },
    "target_orientation": {
      "type": "object",
      "required": [
        "yaw",
        "pitch",
        "roll"
      ],
      "properties": {
        "yaw": {
          "type": "number"
        },
        "pitch": {
          "type": "number"
        },
        "roll": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "tolerance_degrees": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
