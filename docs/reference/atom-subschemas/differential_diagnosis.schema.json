{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Differential Diagnosis",
  "description": "Select the most likely causes given a set of symptoms.",
  "type": "object",
  "required": ["scenario", "symptoms", "diagnosis_options", "correct_diagnoses", "required_count"],
  "properties": {
    "scenario": {
      "type": "string",
      "description": "Case overview or initial complaint."
    },
    "symptoms": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 2,
      "description": "Observed symptoms or findings."
    },
    "diagnosis_options": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 3,
      "description": "Candidate diagnoses to choose from."
    },
    "correct_diagnoses": {
      "type": "array",
      "items": { "type": "integer", "minimum": 0 },
      "minItems": 1,
      "description": "Indices of the most likely diagnoses."
    },
    "required_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of diagnoses the learner must select."
    },
    "explanation": {
      "type": "string",
      "description": "Why these diagnoses are most likely."
    }
  },
  "additionalProperties": false
}
