{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cloze Deletion Atom",
  "description": "Fill-in-the-blank recall with typed input",
  "type": "object",
  "required": ["cloze_text"],
  "properties": {
    "cloze_text": {
      "type": "string",
      "pattern": ".*\\{\\{c\\d+::[^}]+\\}\\}.*",
      "description": "Text with {{c1::answer}} cloze placeholders"
    },
    "hint": {
      "type": "string",
      "description": "Optional hint to assist recall"
    },
    "accepted_answers": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      },
      "description": "Map of cloze IDs to alternative acceptable answers"
    },
    "case_sensitive": {
      "type": "boolean",
      "default": false,
      "description": "Whether answer matching is case-sensitive"
    },
    "context": {
      "type": "string",
      "description": "Additional context shown during the exercise"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Optional categorization tags"
    }
  }
}
