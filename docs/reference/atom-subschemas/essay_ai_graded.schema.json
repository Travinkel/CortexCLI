{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Essay AI Graded Atom",
  "description": "Long-form response graded against a rubric by AI.",
  "type": "object",
  "required": ["prompt", "rubric"],
  "properties": {
    "prompt": {
      "type": "string",
      "description": "Essay prompt and expectations.",
      "minLength": 1
    },
    "min_word_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Minimum word count expected."
    },
    "max_word_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum word count allowed."
    },
    "audience": {
      "type": "string",
      "description": "Intended audience or tone guidance."
    },
    "rubric": {
      "type": "object",
      "description": "Scoring rubric used by AI grading.",
      "required": ["criteria", "min_pass_score"],
      "properties": {
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "points"],
            "properties": {
              "name": {"type": "string"},
              "description": {"type": "string"},
              "points": {"type": "number", "minimum": 0},
              "required": {"type": "boolean", "default": false}
            },
            "additionalProperties": false
          }
        },
        "min_pass_score": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
