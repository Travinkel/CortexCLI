{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Concurrency Hazard Detection Atom",
  "description": "Detect concurrency hazards in code.",
  "type": "object",
  "required": [
    "prompt",
    "code",
    "hazards"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "code": {
      "type": "string"
    },
    "hazards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "location",
          "description"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "mitigation": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
