{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scalability Reasoning Atom",
  "description": "Reason about scaling behavior and bottlenecks.",
  "type": "object",
  "required": [
    "prompt",
    "system_description",
    "bottlenecks",
    "scaling_strategy"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "system_description": {
      "type": "string"
    },
    "bottlenecks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "scaling_strategy": {
      "type": "string"
    },
    "tradeoffs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
