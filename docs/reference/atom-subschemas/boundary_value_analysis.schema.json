{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Boundary Value Analysis",
  "description": "Provide boundary inputs likely to trigger failures.",
  "type": "object",
  "required": ["function_description", "input_domain", "boundary_cases"],
  "properties": {
    "function_description": {
      "type": "string",
      "description": "Summary of the function or validation rule under test."
    },
    "input_domain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "description": "Input variable name." },
          "type": {
            "type": "string",
            "enum": ["integer", "number", "string"],
            "description": "Type of the input variable."
          },
          "min": { "type": "number", "description": "Minimum allowed value." },
          "max": { "type": "number", "description": "Maximum allowed value." },
          "inclusive_min": {
            "type": "boolean",
            "description": "Whether min is inclusive."
          },
          "inclusive_max": {
            "type": "boolean",
            "description": "Whether max is inclusive."
          }
        },
        "additionalProperties": false
      },
      "description": "Constraints for each input variable."
    },
    "boundary_cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["inputs", "expected_result"],
        "properties": {
          "inputs": {
            "type": "object",
            "description": "Candidate boundary inputs keyed by variable name.",
            "additionalProperties": { "type": ["number", "string"] }
          },
          "expected_result": {
            "type": "string",
            "description": "Expected validation outcome (pass/fail or error)."
          }
        },
        "additionalProperties": false
      },
      "description": "Boundary inputs the learner should identify."
    },
    "explanation": {
      "type": "string",
      "description": "Why these cases exercise the boundaries."
    }
  },
  "additionalProperties": false
}
