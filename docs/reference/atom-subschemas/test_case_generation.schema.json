{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Case Generation Atom",
  "description": "Generate tests that cover requirements and edge cases.",
  "type": "object",
  "required": [
    "prompt",
    "requirements",
    "generated_tests"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "generated_tests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "coverage_notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
