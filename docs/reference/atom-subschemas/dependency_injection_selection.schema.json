{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dependency Injection Selection Atom",
  "description": "Select dependency injection strategy or targets.",
  "type": "object",
  "required": [
    "prompt",
    "components",
    "dependencies",
    "selected_strategy"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "selected_strategy": {
      "type": "string"
    },
    "rationale": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
