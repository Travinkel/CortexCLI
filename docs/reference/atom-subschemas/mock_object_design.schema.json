{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mock Object Design Atom",
  "description": "Design mock objects for a dependency.",
  "type": "object",
  "required": [
    "prompt",
    "dependency",
    "mock_behavior",
    "expectations"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "dependency": {
      "type": "string"
    },
    "mock_behavior": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "expectations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
