{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State Transition Validation Atom",
  "description": "Validate state machine transitions.",
  "type": "object",
  "required": [
    "prompt",
    "states",
    "transitions"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "states": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to",
          "event"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "event": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "invalid_transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to",
          "event"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "event": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
