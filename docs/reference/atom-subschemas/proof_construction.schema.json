{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Proof Construction Atom",
  "description": "Construct a proof from premises to conclusion.",
  "type": "object",
  "required": [
    "prompt",
    "theorem",
    "premises",
    "steps",
    "conclusion"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "theorem": {
      "type": "string"
    },
    "premises": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "conclusion": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
