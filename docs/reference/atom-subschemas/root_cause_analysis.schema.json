{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root Cause Analysis Atom",
  "description": "Explain the root cause of a failure or bug.",
  "type": "object",
  "required": [
    "prompt",
    "incident_summary",
    "observed_symptoms",
    "root_cause"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "incident_summary": {
      "type": "string"
    },
    "observed_symptoms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "root_cause": {
      "type": "string"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
