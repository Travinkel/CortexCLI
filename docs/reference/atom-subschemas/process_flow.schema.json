{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Process Flow",
  "description": "Arrange steps in a process or workflow in correct order",
  "type": "object",
  "required": ["steps", "connections"],
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "type"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the step"
          },
          "label": {
            "type": "string",
            "description": "Display text for the step"
          },
          "type": {
            "type": "string",
            "enum": ["start", "end", "process", "decision", "input", "output", "subprocess"],
            "description": "Type of flowchart element"
          },
          "description": {
            "type": "string",
            "description": "Additional details about the step"
          }
        }
      },
      "minItems": 3,
      "maxItems": 25,
      "description": "Steps in the process flow"
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string",
            "description": "Source step ID"
          },
          "to": {
            "type": "string",
            "description": "Target step ID"
          },
          "label": {
            "type": "string",
            "description": "Label for the connection (e.g., 'Yes', 'No' for decisions)"
          }
        }
      },
      "minItems": 2,
      "description": "Correct connections between steps"
    },
    "process_type": {
      "type": "string",
      "enum": ["sequential", "branching", "parallel", "loop"],
      "description": "Type of process flow"
    },
    "hint": {
      "type": "string",
      "description": "Optional hint for solving the problem"
    }
  }
}
