{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Construction Atom",
  "description": "Build a user interface that matches a provided specification.",
  "type": "object",
  "required": ["prompt", "target_spec"],
  "properties": {
    "prompt": {
      "type": "string",
      "description": "Instruction describing the UI to construct.",
      "minLength": 1
    },
    "target_spec": {
      "description": "Target UI specification as text or structured JSON.",
      "oneOf": [
        {"type": "string"},
        {"type": "object", "additionalProperties": true}
      ]
    },
    "components": {
      "type": "array",
      "description": "Allowed UI components/widgets.",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {"type": "string"},
          "label": {"type": "string"},
          "required": {"type": "boolean", "default": false}
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "layout_constraints": {
      "type": "array",
      "description": "Layout rules such as spacing, alignment, or grid usage.",
      "items": {"type": "string"}
    },
    "viewport": {
      "type": "object",
      "description": "Canvas size in pixels.",
      "required": ["width", "height"],
      "properties": {
        "width": {"type": "integer", "minimum": 1},
        "height": {"type": "integer", "minimum": 1}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
