{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parsons Problem",
  "description": "Rearrange shuffled code lines into the correct order",
  "type": "object",
  "required": ["code_lines", "correct_order"],
  "properties": {
    "code_lines": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 3,
      "maxItems": 15,
      "description": "Shuffled code lines to be reordered"
    },
    "correct_order": {
      "type": "array",
      "items": {"type": "integer", "minimum": 0},
      "description": "Indices of code_lines in correct order"
    },
    "language": {
      "type": "string",
      "enum": ["python", "java", "javascript", "typescript", "c", "cpp", "csharp", "go", "rust", "bash", "sql", "html", "css"],
      "description": "Programming language of the code"
    },
    "hint": {
      "type": "string",
      "description": "Optional hint for solving the problem"
    }
  }
}
