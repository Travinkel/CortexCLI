{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reaction Time Check Atom",
  "description": "Measure reaction time against a threshold.",
  "type": "object",
  "required": [
    "prompt",
    "stimulus",
    "threshold_ms",
    "response_time_ms"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "stimulus": {
      "type": "string"
    },
    "threshold_ms": {
      "type": "integer",
      "minimum": 1
    },
    "response_time_ms": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
