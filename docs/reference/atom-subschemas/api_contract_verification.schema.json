{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Contract Verification Atom",
  "description": "Verify implementation against an API contract.",
  "type": "object",
  "required": [
    "prompt",
    "api_spec",
    "test_cases",
    "violations"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "api_spec": {
      "type": "string"
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "violations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
